{
  "name": "tauri-bun-vite",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "A project built with Bun",
  "author": "Your Name <you@example.com>",
  "license": "MIT",
  "scripts": {
    "dev": "bun run vite",
    "prod": "bun run vite --mode .env.production",
    "test": "bun vitest --mode .env.test",
    "build": "bun run vue-tsc --noEmit && bun run vite build",
    "preview": "bun run vite preview",
    "tauri": "tauri",
    "distribute": "bun run tauri build",
    "format": "bun run prettier --write .",
    "preinstall": "npx only-allow bun",
    "postinstall": "echo '依赖包下载完成...'",
    "update": "bun update && cargo update --manifest-path src-tauri/Cargo.toml"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --files-ignore-unknown=true",
      "biome check --write --no-errors-on-unmatched",
      "biome check --write --organize-imports-enabled=false --no-errors-on-unmatched",
      "biome check --write --unsafe --no-errors-on-unmatched",
      "biome format --write --no-errors-on-unmatched",
      "biome lint --write --no-errors-on-unmatched"
    ],
    "*": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-barcode-scanner": "~2",
    "@tauri-apps/plugin-dialog": "~2",
    "@tauri-apps/plugin-nfc": "~2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-updater": "~2",
    "axios": "^1.11.0",
    "echarts": "^6.0.0",
    "figlet": "^1.8.2",
    "lodash-es": "^4.17.21",
    "nprogress": "^0.2.0",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.4.1",
    "screenfull": "^6.0.2",
    "vue": "^3.5.13",
    "vue-echarts": "^7.0.3",
    "vue-i18n": "^11.1.11",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@intlify/unplugin-vue-i18n": "^6.0.8",
    "@tauri-apps/cli": "^2",
    "@types/bun": "^1.2.19",
    "@types/figlet": "^1.7.0",
    "@types/nprogress": "^0.2.3",
    "@unocss/reset": "^66.4.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/ui": "^3.2.4",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^10.2.4",
    "sass": "^1.90.0",
    "typescript": "~5.6.2",
    "unocss": "^66.4.2",
    "unplugin-auto-import": "^20.0.0",
    "unplugin-icons": "^22.2.0",
    "unplugin-vue-components": "^29.0.0",
    "vite": "^6.0.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.1.10"
  },
  "engines": {
    "bun": ">=1.1.20",
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bunred/bun-vue3-ts.git"
  },
  "bugs": {
    "url": "https://github.com/bunred/bun-vue3-ts/issues"
  },
  "homepage": "https://github.com/bunred/bun-vue3-ts#readme",
  "keywords": [
    "vue3",
    "typescript",
    "bun"
  ],
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead"
  ]
}
